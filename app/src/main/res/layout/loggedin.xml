<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="@color/text_white"
        android:paddingTop="20dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Welcome to Safety Management Application" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Mask"
        android:layout_marginTop="10dp"
        style="@style/MerayButton"
        android:layout_below="@+id/ActivateBtn"
        android:text="Application Mask"
        />
    <Button
        style="@style/MerayButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TermsConditions"
        android:layout_marginTop="10dp"
        android:text="About Safety Management App"
        android:layout_below="@+id/Mask" />
    <Button
        style="@style/MerayButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activate"
        android:id="@+id/ActivateBtn"
        android:layout_marginTop="125dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        style="@style/MerayButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RateUs"
        android:layout_marginTop="10dp"
        android:text="Rate Us"
        android:layout_below="@+id/TermsConditions" />
    <Button
        style="@style/MerayButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/logout"
        android:text="log out"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/RateUs" />

</RelativeLayout>